<%= render "migraines/navBar" %>

<div class="mask d-flex align-items-center h-100 gradient-custom-3 pb-0">
    <div class="container h-100 pb-0">
      <div class="container row d-flex justify-content-center align-items-center h-100 pb-0">
        <div class="container col-12 col-md-9 col-lg-7 col-xl-6 pb-0">
          <div class="card m-4" style="">
            <div class="card-body px-5 pt-5">
              <h1>Edit Your Settings</h1>

              <% if @user.errors.any? %>
                <ul>
                  <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              <% end %>

              <%= form_for @user do |f| %>
                <div>
                  <%= f.label :first_name %>
                  <br>
                  <%= f.text_field :first_name %>
                </div>

                <div>
                  <%= f.label :last_name %>
                  <br>
                  <%= f.text_field :last_name %>
                </div>
                
                <div>
                <br>
                Would you like to track menstruation?
                <br>
                  <%= f.radio_button :menstruator, "Yes" %>
                  <%= f.label :yes, "Yes" %>
                  <%= f.radio_button :menstruator, "No" %>
                  <%= f.label :no, "No" %>
                </div>
                <br>
                <div>For each of the following, please list items you would like to track <b>separated by a comma</b>.
                <br>If the section is not applicable, <b>leave it blank</b>.</div>
                <div>
                <br>
                  <%= f.label :meds_list, 'Please list each of your meds:' %>
                  <br>
                  <%= f.text_field :meds_list, size: 35 %>
                </div>
                <div>
                  <%= f.label :triggers_list, 'Please list your triggers:' %>
                  <br>
                  <%= f.text_field :triggers_list, size: 35 %>
                </div>
                <div>
                  <%= f.label :symptoms_list, 'Please list symptoms you would like to track:' %>
                  <br>
                  <%= f.text_field :symptoms_list, size: 35 %>
                </div>
                <br>
                <%= f.submit :'Update User', class:"button-8" %>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "layouts/footer" %>