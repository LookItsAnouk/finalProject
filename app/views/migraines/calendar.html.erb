<%= render "navBar" %>

  
  <%= month_calendar(events: @migraines) do |date, migraines| %>
  
  <%= date.day %> 
    <%# td_class= ['date.day'] %>
    <%# td_class<< "Mild" %>
  <% migraines.each do |migraine| %>
    <div>
      <%= migraine.severity%>
      <% if migraine.severity == "Mild" %>
      <img class="icon" src="https://img.icons8.com/emoji/512/yellow-square-emoji.png">
      <% elsif migraine.severity == "Moderate" %>
      <img class="icon" src="https://img.icons8.com/emoji/512/orange-square-emoji.png">

      <% elsif migraine.severity == "Severe" %>
      <img class="icon" src="https://img.icons8.com/emoji/512/red-square-emoji.png">

      <% else %>
      <% end %>
    </div>
  <% end %>

<% end %>


<%= render "layouts/footer" %>
