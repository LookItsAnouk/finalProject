
              <%= form_for @post do |f| %>
                <div>
                  <%= f.label :title %>
                  <br>
                  <%= f.text_field :title, size: 37 %>
                </div>
                <div>
                  <%= f.label :body %>
                  <br>
                  <%= f.text_area :body, :rows=>10, :cols=>37 %>
                </div>
                <%= f.submit :'Create Post', class:"button-8" %>
              <% end %>


